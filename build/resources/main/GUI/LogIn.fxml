<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<GridPane fx:id="grid" alignment="CENTER" hgap="10" vgap="10" styleClass="root"
          prefHeight="800.0" prefWidth="1100.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.LogInController">

    <padding><Insets top="25" right="25" bottom="25" left="25"/></padding>

    <Text fx:id="title" strokeType="OUTSIDE" strokeWidth="0.0" text="Grade Manager"
          GridPane.columnIndex="0" GridPane.rowIndex="0"
          GridPane.columnSpan="2">
        <font>
            <Font size="30.0" />
        </font>
    </Text>

    <Label text="User Name:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>

    <TextField fx:id="loginField" alignment="CENTER" promptText="enter name"
               GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>

    <TextField fx:id="passwordField" alignment="CENTER" promptText="Password"
               GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <VBox spacing="10" alignment="CENTER"
          GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="5" >
        <Button fx:id="go" mnemonicParsing="false" onAction="#Go" text="Log In"/>
        <Button fx:id="create" mnemonicParsing="false" onAction="#createAccount" text="Create Account" />
    </VBox>

</GridPane>
